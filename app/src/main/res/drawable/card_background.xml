<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/secondaryDarkColor"
                android:endColor="@color/secondaryDarkColor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBorder" />
            <corners
                android:radius="@dimen/card_item_corner_radius" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/secondaryDarkColor"
                android:startColor="@color/secondaryDarkColor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBorder" />
            <corners
                android:radius="@dimen/card_item_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/secondaryColor"
                android:startColor="@color/secondaryColor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBorder" />
            <corners
                android:radius="@dimen/card_item_corner_radius" />
        </shape>
    </item>
</selector>